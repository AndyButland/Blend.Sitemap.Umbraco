<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <OurUmbracoBlendSitemapContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Our.Umbraco.Blend.Sitemap\**\*.*</OurUmbracoBlendSitemapContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyOurUmbracoBlendSitemapAssets" BeforeTargets="Build">
        <ItemGroup>
            <OurUmbracoBlendSitemapContentFiles Include="$(OurUmbracoBlendSitemapContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Our.Umbraco.Blend.Sitemap files: $(OurUmbracoBlendSitemapContentFilesPath) - #@(OurUmbracoBlendSitemapContentFiles->Count()) files"  Importance="high" />
        <Copy SourceFiles="@(OurUmbracoBlendSitemapContentFiles)" DestinationFiles="@(OurUmbracoBlendSitemapContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.Blend.Sitemap\%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" />
    </Target>

    <Target Name="ClearOurUmbracoBlendSitemapAssets" BeforeTargets="Clean">
        <ItemGroup>
            <OurUmbracoBlendSitemapDir Include="$(MSBuildProjectDirectory)\App_Plugins\Our.Umbraco.Blend.Sitemap\" />
        </ItemGroup>
        <Message Text="Clear old Our.Umbraco.Blend.Sitemap data"  Importance="high" />
        <RemoveDir Directories="@(OurUmbracoBlendSitemapDir)"  />
    </Target>

</Project>
